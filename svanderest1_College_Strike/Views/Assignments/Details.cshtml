@model svanderest1_College_Strike.Models.Assignment

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl>
        <dt>
            Members
        </dt>
        <dd>
            <ul>
                @foreach (Member m in Model.Members)
                {
                    <li>@m.FullName</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Steward"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a><span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>
